{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
      "^u-(.*)": "vk-uview-ui/components/u-$1/u-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/login/index",
      "style": {
        "navigationBarTitleText": "登录"
      }
    },
    {
      "path": "pages/home/index",
      "style": {
        "navigationBarTitleText": "首页推荐"
      }
    },
    {
      "path": "pages/ranking/index",
      "style": {
        "navigationBarTitleText": "排行榜单"
      }
    },
    {
      "path": "pages/my/index",
      "style": {
        "navigationBarTitleText": "个人中心"
      }
    },
    {
      "path": "pages/pinia/index",
      "style": {
        "navigationBarTitleText": "Pinia"
      }
    },
    {
      "path": "pages/charts/index",
      "style": {
        "navigationBarTitleText": "图表"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "white",
    "navigationBarTitleText": "uni-template",
    "navigationBarBackgroundColor": "#409eff",
    "backgroundColor": "#ffffff"
  },
  "tabBar": {
    "color": "#bfbfbf",
    "selectedColor": "#1296db",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/home/index",
        "text": "首页",
        "iconPath": "static/images/tabbar/home1.png",
				"selectedIconPath": "static/images/tabbar/home2.png"
      },
      {
        "pagePath": "pages/ranking/index",
        "text": "榜单",
        "iconPath": "static/images/tabbar/ranking1.png",
				"selectedIconPath": "static/images/tabbar/ranking2.png"
      },
      {
        "pagePath": "pages/my/index",
        "text": "我的",
        "iconPath": "static/images/tabbar/my1.png",
				"selectedIconPath": "static/images/tabbar/my2.png"
      }
    ]
  }
}
